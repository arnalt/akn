<div class="select">
  <%= label_tag t('messages.report_user') %>
  <%= select_tag "user", options_for_select(@users.each.map { |u| u.lastname+' '+u.id.to_s} )%>
  <%= label_tag t("text.work_index_client") %>
  <%= select_tag 'clientname', options_for_select(Client.all.map { |d| d.name+' ' + d.project }) %>
  <br>
  <%= label_tag t("text.work_index_start_at") %>
  <%= datepicker :period_begin, params[:period_begin], dateFormat: 'dd.mm.yy' %> <br>
  <%= label_tag t("text.work_index_end_at") %>
  <%= datepicker :period_end, params[:period_end], dateFormat: 'dd.mm.yy' %> <br>
  <label class="radio">
    <%= radio_button_tag :passed, value= '1' %>
    <%= t('messages.report_passed') %>
  </label>
  <label class="radio">
    <%= radio_button_tag :passed, value='2' %>
    <%= t('messages.report_passed_op2') %>
  </label>


