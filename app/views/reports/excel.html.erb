<div class="row">
  <div class="offset1">
    <h4>Auswahl Parameter</h4>
    <%=  form_tag output_path(format: "xls") do %>
        <div class="select">
          <%=  label_tag :Kunde %>
          <%=  select_tag 'Clientname', options_for_select(Client.all.map {|d| d.name}) %><br>
          <%=  label_tag :Beginn %>
          <%=  date_select :zeitraum_von, params[:zeitraum_von]  %> <br>
          <%=  label_tag :Ende %>
          <%=  date_select :zeitraum_bis, params[:zeitraum_bis] %>
        </div>
        <%=  submit_tag "GO"   %>
    <% end %>
  </div>
</div>