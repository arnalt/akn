<% provide(:title, 'Edit user') %>


<div class="row">
  <div class="span6 offset3">
    <h3><%= t("text.edit_users_title") %></h3>
    <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <br>
        <%= f.submit t("links.button_save_changes"), class: "btn btn-large btn-primary" %>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails"><%= t("links.button_avatar_change") %></a>
    </div>
</div>