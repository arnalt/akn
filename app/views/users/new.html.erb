<% provide(:title, 'Sign up') %>
<h1><%= t("text.new_user") %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, :html => { :multipart => true } do |f| %>
        <%= render 'fields', f: f %>
        <br>
        <%= f.submit t("text.new_user"), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>