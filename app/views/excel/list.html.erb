<table>
  <div class="excel_title">Monat: <%= @akt_monat %> </div>
  <tr class ="ueberschrift">
    <th>Datum</th>
    <th>Woche</th>
    <th>Tag</th>
    <th>Von</th>
    <th>Bis</th>
    <th>Pause</th>
    <th>Stunden</th>
    <th>Projekt</th>
    <th>Kunde</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @works.each do |work| %>
      <tr>
        <td><%= l work.datum %></td>
        <td><%= work.kw %></td>
        <td><%= work.tag %></td>
        <td><%= l work.von, format: :short %></td>
        <td><%= l work.bis, format: :short %></td>
        <td><%= l work.mm, format: :short %></td>
        <td><%= work.std %></td>
        <td><%= work.pbez %></td>
        <td><%= work.kunde %></td>
        <td><%= work.erl %></td>
      </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="6">Gesamt</td>
    <td class="total_cell"><%= @total_std %></td>
  </tr>
</table>

