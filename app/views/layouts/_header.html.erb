    <div class="container">
      <%= link_to t("text.akn_title"), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
              <li><%= link_to t("text.menu_works"), works_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Report <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t("text.menu_display"), input_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to t("text.menu_excel"), excel_path %></li>
                  <% unless Rails.env.production? %>
                      <li><%= link_to "PDF", pdf_path %></li>
                  <% end %>
                </ul>
              </li>
              <% if current_user.admin? %>
                  <li id="fat-menu" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Admin<b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t("text.menu_clients"), clients_path %></li>
                      <li><%= link_to t("text.menu_tasks"), tasks_path %></li>
                      <li><%= link_to t("text.menu_users"), users_path %></li>
                      <li><%= link_to t("text.menu_admin_period"), admperiod_path %></li>
                    </ul>
                  </li>
              <% end %>
