                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t("text.menu_locales") %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t("text.menu_locales_de"), locale_path('de') %></li>
                  <li><%= link_to t("text.menu_locales_en"), locale_path('en') %></li>
                </ul>
              </li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t("text.menu_account") %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t("text.menu_profil"), edit_user_path(current_user) %></li>
                  <li><%= link_to t("text.menu_settings"), current_user %></li>
